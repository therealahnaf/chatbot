# Application Configuration
APP_NAME=ai-agent-platform
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=ai_agent_db
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:5432/${POSTGRES_DB}
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# Qdrant Configuration
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=knowledge_base
QDRANT_API_KEY=

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

# Langfuse Configuration (Optional)
LANGFUSE_PUBLIC_KEY=pk-lf-your-public-key
LANGFUSE_SECRET_KEY=sk-lf-your-secret-key
LANGFUSE_HOST=https://cloud.langfuse.com
LANGFUSE_ENABLED=true

# Security Configuration
SECRET_KEY=your-secret-key-change-this-in-production-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting
RATE_LIMIT_PER_USER=100
RATE_LIMIT_PER_IP=1000
AGENT_QUERY_LIMIT=20

# File Upload
MAX_UPLOAD_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,txt,docx,md

# Prometheus Configuration
ENABLE_METRICS=true
METRICS_PORT=8000

# Grafana Configuration
GRAFANA_ADMIN_PASSWORD=admin-change-this-in-production

# Agent Configuration
AGENT_MAX_ITERATIONS=10
AGENT_TIMEOUT_SECONDS=30
CONVERSATION_HISTORY_LIMIT=50

# Knowledge Base Configuration
KB_CHUNK_SIZE=500
KB_CHUNK_OVERLAP=50
KB_TOP_K_RESULTS=5
KB_CHUNKING_STRATEGY=section  # Options: "section" (split by # headings) or "token" (split by token count)

# Cache Configuration
CACHE_TTL_SECONDS=3600
CACHE_USER_PROFILE_TTL=21600
CACHE_QUERY_TTL=3600

# External APIs (Optional)
SERPER_API_KEY=your-serper-api-key-for-web-search
TAVILY_API_KEY=your-tavily-api-key-for-web-search

# LiveKit Configuration
LIVEKIT_URL=ws://localhost:7880
LIVEKIT_API_KEY=devkey
# IMPORTANT: Generate a secure secret with: openssl rand -hex 32
# NEVER commit the real secret to git! Use different secrets for dev/prod
LIVEKIT_API_SECRET=your-secure-64-character-hex-secret-here
LIVEKIT_ENABLED=true

# Voice AI Configuration
# Deepgram (Speech-to-Text)
DEEPGRAM_API_KEY=your-deepgram-api-key-here
DEEPGRAM_MODEL=nova-3
DEEPGRAM_LANGUAGE=en

# ElevenLabs (Text-to-Speech)
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here
ELEVENLABS_VOICE_ID=EXAVITQu4vr4xnSDxMaL
ELEVENLABS_MODEL=eleven_turbo_v2_5

# OpenAI TTS (Alternative Text-to-Speech)
OPENAI_TTS_VOICE=echo
OPENAI_TTS_MODEL=tts-1

# Voice Agent Configuration
VOICE_AGENT_ENABLED=true
VOICE_AGENT_DEFAULT_TTS=openai  # Options: openai, elevenlabs
VOICE_AGENT_TEMPERATURE=0.7
VOICE_AGENT_ALLOW_INTERRUPTIONS=true
